{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Compilation du projet (sans bibliographie, index et nomenclature)",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "command": "./make",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Mise à jour des bibliothèques",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "command": "./make --update-pull",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Compilation du projet (complète)",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make --full",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Affichage des erreurs",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "code .render_report_log.txt"
        },
        {
            "type": "shell",
            "label": "Vérification orthographique des fichiers",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make --check"
        },
        {
            "type": "shell",
            "label": "Afficher le rendu PDF",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "okular main.pdf"
        },
        {
            "type": "shell",
            "label": "Génération des snippets VSCode depuis la bibliothèque Utils",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make --snippet"
        },
        {
            "type": "shell",
            "label": "Installation des utiliaires de compilation",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make --install"
        },
        {
            "type": "shell",
            "label": "Ajout d'une version de projet",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make --update"
        },
        {
            "type": "shell",
            "label": "Retirer tous les documents de la compilation",
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "php compileAnyFile.php"
        },
        {
            "type": "shell",
            "label": "Autoriser la compilation complète du répertoire",
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "php compileAllFiles.php"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "echo",
            "args": [
                "${input:componentType}",
                "${input:componentName}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "componentType",
            "description": "What type of component do you want to create?",
            "options": [
              "component",
              "directive",
              "pipe",
              "service",
              "class",
              "guard",
              "interface",
              "enum",
              "enum"
            ],
            "default": "component"
          },
          {
            "type": "promptString",
            "id": "componentName",
            "description": "Name your component.",
            "default": "my-new-component"
          }
    ]
}

